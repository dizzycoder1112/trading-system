# Server Configuration
PORT=8080
ENVIRONMENT=development
LOG_LEVEL=info

# Strategy Configuration
STRATEGY_INSTRUMENTS=ETH-USDT-SWAP
STRATEGY_TYPE=grid

# Grid Strategy Parameters
GRID_TP_MIN=0.0015                    # 最小止盈 0.15%
GRID_TP_MAX=0.003                     # 最大止盈 0.3%
GRID_MAX_POSITIONS=30                 # 最大持仓数量
GRID_MAX_NOTIONAL=3000.0              # 最大持仓名义价值（美元）

# Trend Filter Configuration ⭐ 新增
TREND_FILTER_ENABLED=true             # 是否启用趋势过滤（默认: true）
TREND_FILTER_EMA_THRESHOLD=0.005      # EMA 差距阈值 0.5%（EMA20 vs EMA50）
TREND_FILTER_CANDLE_THRESHOLD=0.006   # 单根K线阈值 0.6%（快速响应剧烈波动）
TREND_FILTER_EMA_SHORT=20             # 短期 EMA 周期（默认: 20，约1.5小时）
TREND_FILTER_EMA_LONG=50              # 长期 EMA 周期（默认: 50，约4小时）

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
